{
  "kind": "collectionType",
  "collectionName": "contacts",
  "info": {
    "name": "Contactos",
    "description": ""
  },
  "options": {
    "increments": true,
    "timestamps": true,
    "draftAndPublish": false
  },
  "attributes": {
    "name": {
      "type": "string",
      "required": true
    },
    "surname": {
      "type": "string",
      "required": true
    },
    "company": {
      "type": "string",
      "required": true
    },
    "email": {
      "type": "email",
      "required": true,
      "unique": true
    },
    "phone1": {
      "type": "biginteger",
      "required": true
    },
    "phone2": {
      "type": "biginteger"
    },
    "description": {
      "type": "text",
      "required": true
    },
    "photo": {
      "model": "file",
      "via": "related",
      "allowedTypes": [
        "images"
      ],
      "plugin": "upload",
      "required": false
    },
    "type": {
      "type": "enumeration",
      "enum": [
        "Externo",
        "Interno"
      ],
      "required": true
    }
  }
}
